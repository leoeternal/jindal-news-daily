              #formmake{
                width:500px;
                transform:translateX(-250px);
              }
              #box{
                transform:translateX(100px);
              }
            }
            @media(max-width:768px){
              #formmake{
                width:700px;
                transform:translateX(-250px);
              }
            }
            @media(max-width:992px){
               #formmake{
                width:700px;
                transform:translateX(-250px);
              }
               #formbutton{
                transform:translateY(10px);
              }
            }
        </style>
    </head>
    <body>
       
        
