    <form class="form-inline my-2 my-lg-0" action="/search" method="POST">
      <input class="form-control mr-sm-2" type="text" name="q" placeholder="Search any topic" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
<br>
<br>
     

<nav class="navbar navbar-dark bg-light">
  <form class="form-inline" action="/food/item/dish" method="POST">
    <input id="formmake" class="form-control mr-sm-2" type="search" name="dish" placeholder="Discover more than 10,000 fantastic recipes on getNEWS" aria-label="Search">
    <button id="formbutton" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav><br>


<div class="container">
  <h5>About <%= getdish.body.hits.length %> results for : <font color="red"><%= dish %></font></h5><br>

    
<div class="row">
    
<% getdish.body.hits.forEach(function(dish)
{ %>
    <div class="col-lg-4 col-sm-12 col-md-6"> 
            <div id="box" class="card" style="width: 18rem;">
  
  <div class="card-body">
      <img src="<%= dish.recipe.image %>" class="card-img-top" alt="..."><br><br>
    <h5 class="card-title"><%= dish.recipe.label %></h5>
    <p class="card-text"> <% dish.recipe.ingredientLines.forEach(function(line){
    %>
     <strong>-</strong> <%= line %><br>
    <% }) %>
    </p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><font color="red"><%= dish.recipe.healthLabels[0] %></font></li>
    <li class="list-group-item"><font color="red"><%= dish.recipe.healthLabels[1] %></font></li>
    <li class="list-group-item"><font color="red"><%= dish.recipe.healthLabels[2] %></font></li>
  </ul>
  <div class="card-body">
    <a href="<%= dish.recipe.shareAs %>" class="card-link"><font size="5px">Explore..</font></a>
  </div>
</div>
         </div>
<% }) %>
      
</div>
  </div>
        
        
        
        
        
        
        
        
        
        
